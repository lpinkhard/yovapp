<?xml version="1.0" encoding="utf-8" ?>  
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="YoV.Views.LoginSelectPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                <Image Source="yov_logo.png" VerticalOptions="Center" />
            </ContentView>
            <StackLayout Orientation="Vertical" Padding="40" Spacing="20">
                <Button Text="Login" Command="{Binding LoginCommand}" FontSize="24" />
                <Button Text="Register" Command="{Binding RegisterCommand}" FontSize="24" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>